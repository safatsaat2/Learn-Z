{% comment %}
  Hero Section for All Courses
  Dynamic Shopify section with customizable content and styling
{% endcomment %}

<style>
    .srs-all-hero-{{ section.id }} {
      padding: {{ section.settings.padding_vertical }}rem {{ section.settings.padding_horizontal }}rem;
      display: flex;
      justify-content: center;
      align-items: center;
      {% if section.settings.full_height %}
        min-height: 100vh;
      {% endif %}
      position: relative;
      z-index: 1;
    }

    .hero-container-{{ section.id }} {
      max-width: {{ section.settings.max_width }}px;
      width: 100%;
      min-height: {{ section.settings.min_height }}px;
          background: #1E172859;
      border-radius: {{ section.settings.border_radius }}px;
      border: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
      backdrop-filter: blur({{ section.settings.backdrop_blur }}px);
      -webkit-backdrop-filter: blur({{ section.settings.backdrop_blur }}px);
      display: flex;
      align-items: center;
      justify-content: center;
      padding: {{ section.settings.container_padding }}rem;
    }

    .hero-content-{{ section.id }} {
      text-align: {{ section.settings.text_alignment }};
      max-width: {{ section.settings.content_max_width }}px;
      width: 100%;
    }

    .hero-title-{{ section.id }} {
      color: #fff;
      background: radial-gradient(70.54% 70.54% at 50% 50%, #fff, #ffffff92 92.71%, #fff9 92.72%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      font-size: 72px;
      font-weight: {{ section.settings.title_weight }};
      margin-bottom: {{ section.settings.title_margin_bottom }}rem;
      line-height: normal;
      font-family: "Inter", sans-serif;
    }

    .hero-description-{{ section.id }} {
  color: #fff;
      background: radial-gradient(70.54% 70.54% at 50% 50%, #fff, #ffffff92 92.71%, #fff9 92.72%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      font-size: 20px;
      font-weight: {{ section.settings.description_weight }};
      line-height: normal;
      opacity: 1;
      max-width: 628px;
      margin: 0 auto;
      font-family: "Inter", sans-serif;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
      .srs-all-hero-{{ section.id }} {
        padding: {{ section.settings.mobile_padding_vertical }}rem {{ section.settings.mobile_padding_horizontal }}rem;
        {% if section.settings.mobile_full_height %}
          min-height: 60vh;
        {% endif %}
      }

      .hero-container-{{ section.id }} {
        min-height: {{ section.settings.mobile_min_height }}px;
        padding: {{ section.settings.mobile_container_padding }}rem;
      }
      .hero-title-{{ section.id }}{
        font-size: 44px;}
      .hero-description-{{ section.id }}{
        font-size: 14px;
      }
    }

    @media (max-width: 480px) {
      .hero-container-{{ section.id }} {
        min-height: {{ section.settings.small_mobile_min_height }}px;
        padding: {{ section.settings.small_mobile_container_padding }}rem;
      }

      .hero-title-{{ section.id }} {
        margin-bottom: {{ section.settings.small_mobile_title_margin_bottom }}rem;
      }
    }
</style>

<section class="srs-all-hero-{{ section.id }}">
  <div class="hero-container-{{ section.id }}">
    <div class="hero-content-{{ section.id }}">
      {% if section.settings.title != blank %}
        <h2 class="hero-title-{{ section.id }}">{{ section.settings.title }}</h2>
      {% endif %}
      {% if section.settings.description != blank %}
        <p class="hero-description-{{ section.id }}">
          {{ section.settings.description | newline_to_br }}
        </p>
      {% endif %}
    </div>
  </div>
</section>

