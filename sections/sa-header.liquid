          {% if section.settings.business_menu != blank %}
            {% for link in linklists[section.settings.business_menu].links %}
              <a href="{{ link.url }}" class="auth-link">{{ link.title }}</a>
            {% endfor %}
          {% endif %}
          {% if section.settings.teach_menu != blank %}
            {% for link in linklists[section.settings.teach_menu].links %}
              <a href="{{ link.url }}" class="auth-link">{{ link.title }}</a>
            {% endfor %}
          {% endif %}
          <a href="{{ routes.cart_url }}" class="cart-btn" aria-label="Cart">
