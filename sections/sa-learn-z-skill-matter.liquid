{% if product.metafields.custom.skills_matter %}
  {% assign skills_matter = product.metafields.custom.skills_matter.value %}

{% style %}
  .rh-learn_z-matter-skills-sec {
  background: #000000;
  padding-top: {{ section.settings.padding_top_mobile }}px;
  padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  padding-left: 20px;
  padding-right: 20px;
}

@media screen and (min-width: 481px) and (max-width: 768px) {
  .rh-learn_z-matter-skills-sec {
    padding-top: {{ section.settings.padding_top_tablet }}px;
    padding-bottom: {{ section.settings.padding_bottom_tablet }}px;
  }
}

@media screen and (min-width: 769px) {
  .rh-learn_z-matter-skills-sec {
    padding-top: {{ section.settings.padding_top_desktop }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
  }
}

.rh-learn_z-matter-skills-sec .container_rh {
  max-width: 1300px;
  margin: 0 auto;
  position: relative;
  z-index: 1;
}
.rh-learn_z-matter-skills-sec ._rh-matter-skills-title {
  text-align: center;
  margin-bottom: 50px;
}
.rh-learn_z-matter-skills-sec ._rh-matter-skills-title ._rh-heading-white {
  background: radial-gradient(
    70.54% 70.54% at 50% 50%,
    #ffffff 0%,
    rgba(255, 255, 255, 0.573) 92.71%,
    rgba(255, 255, 255, 0.6) 92.72%
  );
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  color: transparent;
  font-size: clamp(24px, 5vw, 48px);
  font-family: Inter, sans-serif;
  font-weight: 700;
  word-wrap: break-word;
  line-height: normal;
}
.rh-learn_z-matter-skills-sec ._rh-matter-skills-cards {
  display: flex;
  flex-wrap: wrap;
  gap: 40px;
  justify-content: center;
  align-items: center;
}

._rh-skill-card {
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.03) 0%, rgba(153, 56, 151, 0.17) 100%);
  border-radius: 15px;
  outline: 1px rgba(255, 255, 255, 0.25) solid;
  outline-offset: -1px;
  padding: 16px 24px;
  display: flex;
  align-items: center;
  gap: 16px;
  transition: all 0.3s ease;
}

._rh-skill-card:hover {
  transform: translateY(-2px);
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.06) 0%, rgba(153, 56, 151, 0.25) 100%);
  outline: 1px rgba(255, 255, 255, 0.4) solid;
}

._rh-skill-card-icon {
  background: #F2EFFF;
  border-radius: 8px;
  padding: 8px;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
}

._rh-skill-card-icon-inner {
  width: 24px;
  height: 24px;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

._rh-skill-card-icon-shape {
  opacity: 0.90;
  background: #7D52BB;
}

._rh-skill-card-icon-main {
  width: 17px;
  height: 17px;
}

._rh-skill-card-icon-accent {
  width: 3.64px;
  height: 5.87px;
  background: #7D52BB;
}

._rh-skill-card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

._rh-skill-card-title {
  color: white;
  font-size: 16px;
  font-family: Inter, sans-serif;
  font-weight: 700;
  line-height: 19.2px;
  word-wrap: break-word;
}

._rh-skill-card-learners {
  color: white;
  font-size: 12px;
  font-family: Inter, sans-serif;
  font-weight: 400;
  line-height: 16.8px;
  word-wrap: break-word;
}

/* Responsive Design for Skill Cards */
@media (max-width: 480px) {
  .rh-learn_z-matter-skills-sec ._rh-matter-skills-cards {
    gap: 20px;
  }
  
  ._rh-skill-card {
    min-width: unset;
    width: 100%;
  }
}

@media (min-width: 481px) and (max-width: 768px) {
  .rh-learn_z-matter-skills-sec ._rh-matter-skills-cards {
    gap: 25px;
  }
}

@media (min-width: 769px) and (max-width: 1024px) {
  .rh-learn_z-matter-skills-sec ._rh-matter-skills-cards {
    gap: 30px;
  }
}

@media (min-width: 1025px) {
  .rh-learn_z-matter-skills-sec ._rh-matter-skills-cards {
    gap: 40px;
  }
}
{% endstyle %}

