                <a href="{{ block.settings.cta_link }}" class="srs-cta-link">
                  {{ block.settings.cta_text }}
                  <span class="srs-arrow-icon"></span>
                </a>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>

