<style>
  .srs-testimonial-section {
      padding: 120px 20px 180px;
      font-family: Inter, sans-serif;
      color: {{ section.settings.text_color }};
    z-index: 1;
    position: relative;
  }

  .srs-testimonial-section  .srs-container {
      max-width: 1300px;
      margin: 0 auto;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 60px;
      align-items: center;
  }

  .srs-testimonial-section  .srs-left-part {
      max-width: 554px;
  }

  .srs-testimonial-section  .srs-content-wrapper {
      display: flex;
      flex-direction: column;
      gap: 35px;
  }

  .srs-testimonial-section  .srs-header-section {
      display: flex;
      flex-direction: column;
      gap: 30px;
  }

  .srs-testimonial-section  .srs-logo {
      max-width: 275px;
      height: 48px;
      position: relative;
      overflow: hidden;
  }

  .srs-testimonial-section  .srs-logo img {
      width: 100%;
      height: auto;
      object-fit: contain;
  }

  .srs-testimonial-section  .srs-logo-bg {
      width: 100%;
      height: 100%;
      position: absolute;
      top: 0;
      left: 0;
  }

  .srs-testimonial-section  .srs-logo-text {
      width: 100%;
      height: 100%;
      position: absolute;
      top: 0;
      left: 0;
      display: flex;
      align-items: center;
      font-size: 24px;
      font-weight: 700;
      color: white;
  }

  .srs-testimonial-section .srs-title {
      max-width: 543px;
      font-size: 31px;
      font-weight: 700;
      line-height: 38px;
    color: #fff;
  }

  .srs-testimonial-section  .srs-stats-container {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 16px;
  }

  .srs-testimonial-section  .srs-stat-item {
      border-bottom: 1px solid rgba(209, 210, 224, 0.3);
      padding-bottom: 20px;
  }

  .srs-testimonial-section  .srs-stat-number {
      font-size: 48px;
      font-weight: 700;
      line-height: 58px;
      margin-bottom: 10px;
  }

  .srs-testimonial-section  .srs-stat-text {
      font-size: 15px;
      font-weight: 400;
      line-height: 22px;
      color: {{ section.settings.text_color }};
  }

  .srs-testimonial-section  .srs-right-part {
      max-width: 625px;
  }

  .srs-testimonial-section  .srs-testimonial-card {
      position: relative;
      height: 441px;
  }

  .srs-testimonial-section  .srs-card-bg {
      max-width: 516px;
      height: 441px;
      margin-left: auto;
      background: linear-gradient(180deg, rgba(153, 56, 151, 0.17) 0%, rgba(255, 255, 255, 0) 100%);
      border-radius: 8px;
      border: 1px solid rgba(255, 255, 255, 0.25);
      backdrop-filter: blur(18px);
      position: relative;
      z-index: 2;
  }

  .srs-testimonial-section  .srs-right-part img {
      width: 100%;
      height: 100%;
      /* object-fit: cover; */
      border-radius: 8px;
  }

  /* First Container Styles */
  .srs-testimonial-section  .srs-container.first {
      display: block;
      margin-bottom: 120px;
  }

  .srs-testimonial-section .srs-container.first h2.testimonial-title {
      font-family: 'Inter', sans-serif;
      font-weight: 700;
      font-style: normal;
      font-size: 44px;
      line-height: 120%;
      letter-spacing: 0px;
      text-align: center;
      color: {{ section.settings.text_color }};
      {% if section.settings.show_gradient_text %}
      background: radial-gradient(70.54% 70.54% at 50% 50%, #FFFFFF 0%, rgba(255, 255, 255, 0.573) 92.71%, rgba(255, 255, 255, 0.6) 92.72%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      {% endif %}
  }

  /* Testimonial Card Section */
  .srs-testimonial-section  .srs-testimonial-card-wrapper {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 20px;
      margin-top: 50px;
  }

  .srs-testimonial-section  .srs-testimonial-card-item {
      max-width: 310px;
      width: 100%;
      min-height: 275px;
      background: linear-gradient(180deg, rgba(255,255,255,0.03) 0%, rgba(153,56,151,0.17) 100%);
      border-radius: 8px;
      border: 1px solid rgba(255,255,255,0.25);
      padding: 35px 22px;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      box-sizing: border-box;
  }

  .srs-testimonial-section  .srs-testimonial-content {
      display: flex;
      flex-direction: column;
      gap: 15px;
  }

  .srs-testimonial-section  .srs-testimonial-header {
      display: flex;
      flex-direction: column;
      gap: 5px;
  }

  .srs-testimonial-section  .srs-quote-icon svg path {
      fill: {{ section.settings.text_color }};
  }

  .srs-testimonial-section  .srs-testimonial-text {
      color: {{ section.settings.text_color }};
      font-size: 14px;
      font-family: Inter, sans-serif;
      font-weight: 400;
      line-height: 20px;
  }

  .srs-testimonial-section  .srs-testimonial-text strong {
      font-weight: 700;
  }

  .srs-testimonial-section  .srs-testimonial-text.underline {
      text-decoration: underline;
  }

  .srs-testimonial-section  .srs-stackoverflow-logo {
      display: flex;
      align-items: start;
      flex-direction: column;
      gap: 5px;
  }

  .srs-testimonial-section  .srs-stackoverflow-logo img {
      max-width: 110px;
      height: auto;
  }

  .srs-testimonial-section  .srs-stackoverflow-text {
      color: rgba(145, 148, 172, 0.8);
      font-size: 14px;
      font-family: Inter, sans-serif;
      font-weight: 400;
      line-height: 20px;
  }

  .srs-testimonial-section  .srs-testimonial-footer {
      display: flex;
      flex-direction: column;
      gap: 15px;
      margin-top: 15px;
  }

  .srs-testimonial-section  .srs-testimonial-author {
      display: flex;
      align-items: center;
      gap: 10px;
  }

  .srs-testimonial-section  .srs-author-avatar {
      width: 48px;
      height: 48px;
      border-radius: 50%;
      border: 1px solid rgba(209, 210, 224, 0.3);
      object-fit: cover;
  }

  .srs-testimonial-section  .srs-author-info {
      display: flex;
      flex-direction: column;
      gap: 2px;
  }

  .srs-testimonial-section  .srs-author-name {
      color: {{ section.settings.text_color }};
      font-size: 12px;
      font-family: Inter, sans-serif;
      font-weight: 400;
      line-height: 17px;
  }

  .srs-testimonial-section  .srs-author-title {
      color: {{ section.settings.text_color }};
      font-size: 12px;
      font-family: Inter, sans-serif;
      font-weight: 400;
      line-height: 17px;
      opacity: 0.8;
  }

  .srs-testimonial-section  .srs-cta-link {
      display: flex;
      align-items: center;
      gap: 5px;
      color: #A365FF;
      font-size: 14px;
      font-family: Inter, sans-serif;
      font-weight: 400;
      line-height: 17px;
      text-decoration: none;
      transition: color 0.2s ease;
  }

  .srs-testimonial-section    .srs-cta-link:hover {
      color: #8B5CF6;
  }

  .srs-testimonial-section  .srs-cta-link .srs-arrow-icon {
      width: 16px;
      height: 16px;
      display: inline-block;
      background: url('data:image/svg+xml;utf8,<svg width="16" height="16" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M6 4l4 4-4 4" stroke="%23A365FF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>') center/contain no-repeat;
  }

  /* CTA Button Styles */
  .srs-testimonial-section   ._rh-cta-button {
      width: 100%;
      max-width: 222px;
      height: 50px;
      border-radius: 8px;
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: all 0.3s ease;
      text-decoration: none;
  }

  .srs-testimonial-section ._rh-cta-button:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(158, 110, 229, 0.4);
  }

  .srs-testimonial-section ._rh-cta-button:hover ._rh-cta-button-bg {
      background: linear-gradient(90deg, #b684f0 0%, #ff89fb 100%);
  }

  .srs-testimonial-section ._rh-cta-button:active {
      transform: translateY(0);
  }

  .srs-testimonial-section ._rh-cta-button-bg {
      position: absolute;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, #9e6ee5 0%, #fa75f8 100%);
      border-radius: 6px;
      transition: background 0.3s ease;
  }

  .srs-testimonial-section ._rh-cta-button-overlay {
      position: absolute;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.2);
      border-radius: 6px;
      transition: background 0.3s ease;
  }

  .srs-testimonial-section ._rh-cta-button-text {
      color: white;
      font-size: 14px;
      font-family: Inter, sans-serif;
      font-weight: 400;
      word-wrap: break-word;
      z-index: 1;
      display: flex;
      align-items: center;
      gap: 6px;
  }

  /* Responsive Design */
  @media (max-width: 1400px) {
      .srs-testimonial-section .srs-container {
          max-width: 1200px;
          gap: 50px;
      }

      .srs-testimonial-section .srs-testimonial-card-wrapper {
          grid-template-columns: repeat(4, 1fr);
          gap: 18px;
      }

      .srs-testimonial-section .srs-testimonial-card-item {
          max-width: 280px;
      }
