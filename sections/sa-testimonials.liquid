    </div>

    <div class="srs-right-part">
      <div class="srs-testimonial-card">
        {% if section.settings.right_image != blank %}
          <img src="{{ section.settings.right_image | img_url: '800x' }}" alt="">
        {% else %}
          <img src="https://placehold.co/625x441" alt="Placeholder">
        {% endif %}
      </div>
    </div>
  </div>
</div>
