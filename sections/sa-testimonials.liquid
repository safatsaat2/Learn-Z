            <div class="srs-logo-bg"></div>
            {% if section.settings.logo_image != blank %}
              <img src="{{ section.settings.logo_image | img_url: '300x' }}" alt="{{ section.settings.logo_text }}">
            {% else %}
              <div class="srs-logo-text">{{ section.settings.logo_text }}</div>
            {% endif %}
          </div>
          <h2 class="srs-title">{{ section.settings.left_title }}</h2>
