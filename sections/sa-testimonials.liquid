  <div class="srs-container first">
    <div class="testimonial-content-wrapper">
      <h2 class="testimonial-title">
        {{ section.settings.main_title }}
      </h2>
      <div class="srs-testimonial-card-wrapper">
        {% for block in section.blocks %}
          <div class="srs-testimonial-card-item" {{ block.shopify_attributes }}>
            <div class="srs-testimonial-content">
              <div class="srs-testimonial-header">
                <div class="srs-quote-icon">
