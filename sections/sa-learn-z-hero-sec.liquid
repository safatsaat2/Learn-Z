{% style %}
  .rh-learn_z-hero-sec {
    background: {{ section.settings.section_bg_color | default: '#000' }};
    padding-top: {{ section.settings.section_padding_top_mobile | default: 60 }}px;
    padding-bottom: {{ section.settings.section_padding_bottom_mobile | default: 60 }}px;
    padding-left: {{ section.settings.section_padding_left_right_mobile | default: 20 }}px;
    padding-right: {{ section.settings.section_padding_left_right_mobile | default: 20 }}px;
    display: flex;
    align-items: center;
    position: relative;
  }

  .rh-learn_z-hero-sec .container_rh {
    max-width: {{ section.settings.container_max_width | default: '1300px' }};
    margin: 0 auto;
    width: 100%;
    position: relative;
    z-index: 1;
  }

  /* Main hero wrapper */
  ._rh-hero-main {
    width: 100%;
    max-width: 1300px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 30px;
  }

  /* Hero content section */
  ._rh-hero-content {
    width: 100%;
    max-width: 751px;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    gap: 20px;
  }

  ._rh-hero-content-inner {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    gap: 20px;
  }

  /* Flash sale badge */
  ._rh-flash-sale-badge {
    width: 100%;
    max-width: 350px;
    height: 40px;
    background: {{ section.settings.flash_badge_bg | default: 'linear-gradient(171deg, rgba(255, 255, 255, 0.3) 0%, rgba(171, 171, 171, 0.15) 100%)' }};
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  ._rh-flash-sale-badge:hover {
    transform: scale(1.02);
    background: linear-gradient(171deg, rgba(255, 255, 255, 0.4) 0%, rgba(171, 171, 171, 0.25) 100%);
  }

  ._rh-flash-sale-badge:hover ._rh-flash-sale-glow {
    opacity: 1.5;
    width: 120px;
  }

  ._rh-flash-sale-inner {
    width: 100%;
    height: 38px;
    background: #141414;
    border-radius: 9px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 10px;
  }

  ._rh-flash-sale-text {
    color: {{ section.settings.flash_badge_text_color | default: 'white' }};
    font-size: {{ section.settings.flash_badge_font_size | default: '18px' }};
    font-family: Inter
    , sans-serif;
    font-weight: 400;
    word-wrap: break-word;
    text-align: center;
  }

  ._rh-flash-sale-glow {
    width: 83px;
    height: 1px;
    background: radial-gradient(ellipse 42% 50% at 50% 50%, rgba(255, 255, 255, 0.6) 0%, rgba(255, 255, 255, 0) 100%);
    position: absolute;
    bottom: 0;
    transition: all 0.3s ease;
  }

  /* Main heading */
  ._rh-main-heading {
    width: 100%;
    text-align: center;
    display: flex;
    justify-content: center;
    flex-direction: column;
  }

  ._rh-main-heading ._rh-heading-white {
    background: {{ section.settings.main_heading_gradient | default: 'radial-gradient(70.54% 70.54% at 50% 50%, #ffffff 0%, rgba(255, 255, 255, 0.573) 92.71%, rgba(255, 255, 255, 0.6) 92.72%)' }};
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    color: transparent;
    font-size: clamp({{ section.settings.main_heading_font_size_mobile | default: '32px' }}, 8vw, {{ section.settings.main_heading_font_size_desktop | default: '72px' }});
    font-family: Inter
    , sans-serif;
    font-weight: {{ section.settings.main_heading_font_weight | default: '600' }};
    word-wrap: break-word;
    line-height: normal;
  }

  /* CTA Button */
  ._rh-cta-button {
    width: 100%;
    max-width: {{ section.settings.main_cta_max_width | default: '263px' }};
    height: {{ section.settings.main_cta_height | default: '55px' }};
    border-radius: 8px;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  ._rh-cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(158, 110, 229, 0.4);
  }

  ._rh-cta-button:hover ._rh-cta-button-bg {
    background: {{ section.settings.main_cta_hover_bg | default: 'linear-gradient(90deg, #b684f0 0%, #ff89fb 100%)' }};
  }

  ._rh-cta-button:active {
    transform: translateY(0);
  }

  ._rh-cta-button-bg {
    position: absolute;
    width: 100%;
    height: 100%;
    background: {{ section.settings.main_cta_bg | default: 'linear-gradient(90deg, #9e6ee5 0%, #fa75f8 100%)' }};
    border-radius: 6px;
    transition: background 0.3s ease;
  }

  ._rh-cta-button-overlay {
    position: absolute;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 6px;
    transition: background 0.3s ease;
  }

  ._rh-cta-button-text {
    color: {{ section.settings.main_cta_text_color | default: 'white' }};
    font-size: {{ section.settings.main_cta_font_size | default: '18px' }};
    font-family: Inter
    , sans-serif;
    font-weight: 400;
    word-wrap: break-word;
    z-index: 1;
  }

  /* Glass morphism section */
  ._rh-glass-section {
    width: 100%;
    max-width: 1300px;
    background: {{ section.settings.glass_bg | default: 'rgba(29.9, 23.14, 39.86, 0.35)' }};
    border-radius: 15px;
    border: 1.5px {{ section.settings.glass_border_color | default: 'rgba(255, 255, 255, 0.15)' }} solid;
    -webkit-backdrop-filter: blur(17.5px);
    backdrop-filter: blur(17.5px);
    padding: 30px 20px;
    margin-top: 30px;
  }

  ._rh-glass-content {
    width: 100%;
    max-width: 1128px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    gap: 30px;
  }

  ._rh-glass-header {
    width: 100%;
    max-width: 653px;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    gap: 15px;
  }

  ._rh-glass-heading {
    text-align: center;
  }

  ._rh-glass-heading-white {
    background: {{ section.settings.glass_heading_gradient | default: 'radial-gradient(70.54% 70.54% at 50% 50%, #ffffff 0%, rgba(255, 255, 255, 0.573) 92.71%, rgba(255, 255, 255, 0.6) 92.72%)' }};
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    color: transparent;
    font-size: clamp({{ section.settings.glass_heading_font_size_mobile | default: '24px' }}, 5vw, {{ section.settings.glass_heading_font_size_desktop | default: '38.18px' }});
    font-family: Inter
    , sans-serif;
    font-weight: {{ section.settings.glass_heading_font_weight | default: '700' }};
    word-wrap: break-word;
    line-height: normal;
  }

  ._rh-glass-description {
    text-align: center;
    display: flex;
    justify-content: center;
    flex-direction: column;
    color: {{ section.settings.glass_description_color | default: 'white' }};
    font-size: clamp(12px, 2.5vw, {{ section.settings.glass_description_font_size | default: '13.88px' }});
    font-family: Inter
    , sans-serif;
    font-weight: 400;
    line-height: 1.6;
    word-wrap: break-word;
  }

  /* Career cards container */
  ._rh-career-cards {
    width: 100%;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax({{ section.settings.card_min_width | default: '300px' }}, 1fr));
    justify-content: center;
    align-items: center;
    gap: {{ section.settings.cards_gap | default: '20px' }};
    max-width: 1128px;
  }

  ._rh-career-card {
    width: 100%;
    max-width: 360px;
    background: {{ section.settings.card_bg | default: 'rgba(255, 255, 255, 0.08)' }};
    overflow: hidden;
    border-radius: 7px;
    outline: 1px {{ section.settings.card_border_color | default: 'rgba(255, 255, 255, 0.25)' }} solid;
    outline-offset: -1px;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 24px;
    margin: 0 auto;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  ._rh-career-card:hover {
    transform: translateY(-5px);
    background: rgba(255, 255, 255, 0.12);
    outline: 1px rgba(255, 255, 255, 0.4) solid;
    box-shadow: 0 10px 30px rgba(158, 110, 229, 0.2);
  }

  ._rh-career-card:hover ._rh-career-card-bg {
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.04) 0%, rgba(153, 56, 151, 0.15) 100%);
  }

  ._rh-career-card:hover ._rh-career-card-icon svg,
  ._rh-career-card:hover ._rh-career-card-icon img {
    transform: scale(1.05);
    filter: brightness(1.1);
  }

  ._rh-career-card-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.02) 0%, rgba(153, 56, 151, 0.09) 100%);
    transition: background 0.3s ease;
  }

  /* Career card icons */
  ._rh-career-card-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: auto;
    height: auto;
    margin: 0 auto 20px;
  }

  ._rh-career-card-icon svg,
  ._rh-career-card-icon img {
    max-width: 120px;
    max-height: 90px;
    width: auto;
    height: auto;
    transition: all 0.3s ease;
  }

  ._rh-career-card-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 15px;
    z-index: 1;
  }

  ._rh-career-card-title {
    color: {{ section.settings.card_title_color | default: 'white' }};
    font-size: clamp(16px, 3vw, {{ section.settings.card_title_font_size | default: '20.82px' }});
    font-family: Inter
    , sans-serif;
    font-weight: {{ section.settings.card_title_font_weight | default: '700' }};
    word-wrap: break-word;
    text-align: center;
  }

  ._rh-career-card-stats {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 8px;
    flex-wrap: wrap;
  }

  ._rh-card-stat {
    height: 26px;
    padding: 0 10px;
    border-radius: 5px;
    border: 1px {{ section.settings.card_stat_border_color | default: '#d1d2e0' }} solid;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2px;
  }

  ._rh-card-stat-icon {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  ._rh-card-stat-text {
    color: {{ section.settings.card_stat_text_color | default: 'white' }};
    font-size: clamp(11px, 2vw, {{ section.settings.card_stat_font_size | default: '13.88px' }});
    font-family: Inter
    , sans-serif;
    font-weight: 400;
    line-height: 1.2;
    letter-spacing: 0.24px;
    word-wrap: break-word;
  }

  /* Final CTA button */
  ._rh-final-cta {
    width: 100%;
    max-width: {{ section.settings.final_cta_max_width | default: '234px' }};
    height: {{ section.settings.final_cta_height | default: '43px' }};
    border-radius: 7px;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  ._rh-final-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(158, 110, 229, 0.3);
  }

  ._rh-final-cta:hover ._rh-final-cta-bg {
    background: {{ section.settings.final_cta_hover_bg | default: 'linear-gradient(90deg, #b684f0 0%, #ff89fb 100%)' }};
  }

  ._rh-final-cta:active {
    transform: translateY(0);
  }

  ._rh-final-cta-bg {
    position: absolute;
    width: 100%;
    height: 100%;
    background: {{ section.settings.final_cta_bg | default: 'linear-gradient(90deg, #9e6ee5 0%, #fa75f8 100%)' }};
    border-radius: 5px;
    transition: background 0.3s ease;
  }

  ._rh-final-cta-overlay {
    position: absolute;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 5px;
    transition: background 0.3s ease;
  }

  ._rh-final-cta-text {
    color: {{ section.settings.final_cta_text_color | default: 'white' }};
    font-size: clamp(14px, 2.5vw, {{ section.settings.final_cta_font_size | default: '17.35px' }});
    font-family: Inter
    , sans-serif;
    font-weight: 400;
    word-wrap: break-word;
    z-index: 1;
  }

