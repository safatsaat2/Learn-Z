<style>
  footer.srs-footer {
    padding: 40px 20px 81px;
    font-family: Inter, sans-serif;
    color: #fff;
    position: relative;
    overflow: hidden;
  }

  footer.srs-footer ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  footer.srs-footer * {
    color: #fff;
    text-decoration: none;
  }

  footer.srs-footer .srs-footer-container {
    max-width: 1328.32px;
    margin: 0 auto;
    position: relative;
  }

  footer.srs-footer .srs-footer-container .footer-content-wrapper h3 {
    font-family: "Inter", sans-serif;
    font-weight: 700;
    font-style: Bold;
    font-size: 18px;
    line-height: 24.3px;
    letter-spacing: -0.09px;
    margin-bottom: 40px;
    color: #fff;
  }

  footer.srs-footer .srs-footer-container .footer-content-wrapper .footer-items-wrapper {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 30px;
    align-items: start;
    margin-bottom: 39px;
  }

  /* Responsive breakpoints */
  @media (max-width: 768px) {
    footer.srs-footer .srs-footer-container .footer-content-wrapper .footer-items-wrapper {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
    }

    footer.srs-footer .srs-footer-container .footer-content-wrapper h3 {
      font-size: 16px;
      line-height: 22px;
      margin-bottom: 30px;
    }

    footer.srs-footer {
      padding: 30px 15px 60px;
    }
  }

  @media (max-width: 480px) {
    footer.srs-footer .srs-footer-container .footer-content-wrapper .footer-items-wrapper {
      grid-template-columns: 1fr;
      gap: 25px;
    }

    footer.srs-footer .srs-footer-container .footer-content-wrapper h3 {
      font-size: 14px;
      line-height: 20px;
      margin-bottom: 25px;
    }

    footer.srs-footer {
      padding: 25px 10px 50px;
    }
  }

  footer.srs-footer .srs-footer-container .footer-content-wrapper .footer-items-wrapper:last-child {
    margin-bottom: 0;
  }

  footer.srs-footer .srs-footer-container .footer-content-wrapper .footer-items-wrapper h4 {
    margin-bottom: 15px;
    font-family: "Inter", sans-serif;
    font-weight: 700;
    font-style: Bold;
    font-size: 15.38px;
    line-height: 19.2px;
    letter-spacing: 0%;
  }

  footer.srs-footer .srs-footer-container .footer-content-wrapper .footer-items-wrapper ul li {
    font-family: "Inter", sans-serif;
    font-weight: 400;
    font-style: Regular;
    font-size: 13.34px;
    line-height: 19.6px;
    letter-spacing: 0%;
    margin-bottom: 5px;
  }

  footer.srs-footer .srs-footer-container .footer-content-wrapper .footer-items-wrapper ul li a {
    font-size: inherit;
  }

  footer .bg-blue {
    background: radial-gradient(50% 50% at 50% 50%, rgba(92, 195, 250, 0.28) 0%, rgba(92, 195, 250, 0) 100%);
    width: 1845px;
    height: 1230px;
    top: 317.99px;
    left: -502px;
    opacity: 0.8;
    position: absolute;
  }

  footer .bg-blue2 {
    background: radial-gradient(50% 50% at 50% 50%, rgba(92, 195, 250, 0.28) 0%, rgba(92, 195, 250, 0) 100%);
    width: 1845px;
    height: 1230px;
    top: 102px;
    left: -412px;
    opacity: 0.8;
    position: absolute;
  }

  footer .bg-purple {
    background: radial-gradient(50% 50% at 50% 50%, rgba(158, 110, 230, 0.28) 0%, rgba(158, 110, 230, 0) 100%);
    width: 1845px;
    height: 1230px;
    top: 452px;
    left: 536px;
    opacity: 0.8;
    position: absolute
  }

  footer .bg-purple2 {
    background: radial-gradient(50% 50% at 50% 50%, rgba(158, 110, 230, 0.28) 0%, rgba(158, 110, 230, 0) 100%);
    width: 1845px;
    height: 1230px;
