</style>

{% schema %}
{
  "name": "Advanced Footer",
  "max_blocks": 12,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Explore top skills and certifications"
    },
    {
      "type": "checkbox",
      "id": "show_blue_gradient",
      "label": "Show Blue Gradient",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_purple_gradient",
      "label": "Show Purple Gradient",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "link_list",
      "name": "Navigation Column",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "In-demand Careers"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        },
        {
          "type": "text",
          "id": "view_all_text",
          "label": "View All Text",
          "default": "See all Career Accelerators"
        },
        {
          "type": "url",
          "id": "view_all_link",
          "label": "View All Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Advanced Footer",
      "category": "Navigation",
      "blocks": [
        {
          "type": "link_list",
          "settings": {
            "heading": "In-demand Careers"
          }
        },
        {
          "type": "link_list",
          "settings": {
            "heading": "Popular Skills"
          }
        },
        {
          "type": "link_list",
          "settings": {
            "heading": "Certifications"
          }
        },
        {
          "type": "link_list",
          "settings": {
            "heading": "Resources"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<footer class="srs-footer">
  {% if section.settings.show_blue_gradient %}
    <div class="bg-blue"></div>
    <div class="bg-blue2"></div>
  {% endif %}

  {% if section.settings.show_purple_gradient %}
    <div class="bg-purple"></div>
    <div class="bg-purple2"></div>
  {% endif %}

  <div class="srs-footer-container">
    <div class="footer-content-wrapper">
      <h3>{{ section.settings.heading }}</h3>

      {% comment %}
        Create 3 rows of footer items (to maintain the original structure)
        Each row will contain up to 4 columns (12 total)
      {% endcomment %}

      {% for i in (1..3) %}
        {% assign start_index = i | minus: 1 | times: 4 %}
        {% assign end_index = i | times: 4 | minus: 1 %}
        {% assign blocks_in_row = section.blocks | slice: start_index, 4 %}

        {% if blocks_in_row.size > 0 %}
          <div class="footer-items-wrapper">
            {% for block in blocks_in_row %}
              {% case block.type %}
                {% when 'link_list' %}
                  <ul class="footer-items" {{ block.shopify_attributes }}>
                    <h4>{{ block.settings.heading }}</h4>

                    {% if block.settings.menu != blank %}
                      {% for link in linklists[block.settings.menu].links %}
                        <li class="footer-item">
                          <a href="{{ link.url }}">{{ link.title }}</a>
                        </li>
                      {% endfor %}
                    {% else %}
                      {% comment %} Default placeholder links {% endcomment %}
                      <li class="footer-item">
                        <a href="#">Data Scientist</a>
                      </li>
                      <li class="footer-item">
                        <a href="#">Full Stack Web Developer</a>
                      </li>
                      <li class="footer-item">
                        <a href="#">Cloud Engineer</a>
                      </li>
                      <li class="footer-item">
                        <a href="#">Project Manager</a>
                      </li>
                      <li class="footer-item">
                        <a href="#">Game Developer</a>
                      </li>
                    {% endif %}

                    {% if block.settings.view_all_link != blank %}
                      <li class="footer-item">
                        <a href="{{ block.settings.view_all_link }}">{{ block.settings.view_all_text }}</a>
                      </li>
                    {% endif %}
                  </ul>
              {% endcase %}
            {% endfor %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</footer>
